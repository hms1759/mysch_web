@model mysch_web.Models.login

@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_myschlayout.cshtml";
}

<div class="container" style="justify-content:space-between;">
    <div class=" container  " style="color:white;
        justify-items:right; text-align:center; background-color:white;"
        <table>
            <tr>


                <td class="col-lg-4 col-md-offset-3">
                    <label class="field-validatio-error">
                        @Html.DisplayFor(model => model.LoginErrorMessage)
                    </label>
                </td>
            </tr>
        </table>
    </div>


    <div class="col-md-8">
        <div class="carousel-inner">
            <br>
            <div class="item slider1 active">
                <img src="~/Content/asset/images/slider/4.jpg" alt="">
                <div class="carousel-caption slider-con ">
                    <h2 class="display-4">Welcome to <span>Our College</span></h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4" style="float:right;">
        <!--<div class="ho-ex-title">
                <h4>Upcoming Event</h4>
            </div>-->
        <br>
        <div class="ho-ev-latest ho-ev-latest-bg-3  text-center">
            <div class="ho-lat-ev">
                <h4 class="text-center"> Login</h4>
            </div>
        </div>

        <div class="ho-st-login">
            <ul class="tabs  text-center">
                <li>    </li>
                <li class="tab col s6">Student Login
                <li>    </li>
            </ul>

            <div id="hom_log" class="col s12">

                @using (Html.BeginForm("Std", "Home", FormMethod.Post))
                {
                    <table class="col s12">
                        <tr class="row  col s12 validate">

                            <td class="input-field col s12">
                                <label>Username</label>
                                @Html.EditorFor(model => Model.Username)

                            </td>

                        </tr>

                        <tr class="row  col s12 validate">
                            <td class="input-field col s12">
                                <label>Password</label>
                                @Html.EditorFor(model => Model.Password)

                            </td>

                        </tr>
                   
                        <tr class="row">
                            <td class="input-field col s12">
                                <input type="submit" value="Login" class="waves-effect waves-light light-btn">
                            </td>
                            <td class="input-field col s12 btn btn-primary waves-light" style="background-color:blue; color: white;">
                                @Html.ActionLink("Register", "Studentcreate", "Students")

                            </td>
                        </tr>
                    </table>
                }


            </div>
        </div>
    </div>
    <div></div>
</div>