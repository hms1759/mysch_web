@model IEnumerable<mysch_web.Models.Admin_staff>

@{
    ViewBag.Title = "All_staff";
    Layout = "~/Views/Shared/_myschlayout.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else if (Convert.ToInt32(Session["userID"]) > 1)
    {

        Response.Redirect("~/Admin/All_staf");
    }


}

<div class=" container">
    <hr />








    <!--== USER INFO ==-->
    <div class="sb2-12">
        <ul>
            <li>
                <h5> Admin Profile </h5>
            </li>
        </ul>
        <div class="page-back">

            @Html.ActionLink("Create New", "Create", "Admin")

            <a href=@Url.Action("Admin","Home")><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
        </div>
    </div>

    <table class="table table-striped table-bordered" id="Allstaff" style="border: 2px solid lightgray; ">

        <thead style="background-color:lightgray; color:black;">
            <tr>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.surname)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.passWord)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.passWord)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td style="padding:-10px">
                        <h class="btn btn-primary" style="background-color:grey;padding:0px -10px;  width:20%; color: white; justify-self:flex-start;">


                            <a> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</a>
                        </h>
                      
                        <h class="btn btn-primary" style="background-color:forestgreen; width:20%; color: white;">
                            <a>@Html.ActionLink("Detail", "Details", new { id = item.Id })</a>
                        </h>
                        <h class="btn btn-primary" style="color:white; width:20%; background-color:red;">
                            <a>@Html.ActionLink("Del", "Delete", new { id = item.Id })</a>
                        </h>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
<link href="//cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css " rel="stylesheet" />
@section scripts {
    <script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js" defer></script>
    <script>
        function activatejQueryTable() {
            $("#Allstaff").DataTable();

        }
        $(function () {
            activatejQueryTable();
        });
    </script>
}