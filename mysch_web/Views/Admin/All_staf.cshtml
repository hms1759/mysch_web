@model IEnumerable<mysch_web.Models.Admin_staff>

@{
    ViewBag.Title = "All_staff";
    Layout = "~/Views/Shared/_myschlayout.cshtml";

}

<div class=" container">
    <!--== USER INFO ==-->
    <div class="sb2-12">
        <ul>
            <li>
                <h5>   @Session["userName"].ToString().ToUpper() </h5>
            </li>
        </ul>
        <div class="page-back">

            <a href=@Url.Action("Admin","Home")><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
        </div>
    </div>


    <table class="table table-striped table-bordered" style="border: 2px solid lightgray; " id="staf">

        <thead style="background-color:lightgray; color:black;">
            <tr>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.surname)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Email)
                </th>

                <th style="color:black;">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
